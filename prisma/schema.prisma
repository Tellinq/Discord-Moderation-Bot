// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Infraction {
  id        Int      @id
  guildId   String
  userId    String
  moderator String
  reason    String
  type      InfractionType
  createdAt DateTime @default(now())
}

enum InfractionType {
  BAN
  KICK
  MUTE
  WARN
}